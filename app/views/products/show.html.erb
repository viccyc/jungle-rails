<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category%> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <dl class="dl-horizontal">
      <h4>Reviews</h4>
        <%= form_for @review, :url => product_reviews_path(@product)  do |product_reviews| %>
          <%= product_reviews.fields_for :reviews do |f| %>
            <%= f.label :name %>:
            <%= f.text_field :first_name %><br />
          
            <%= f.label :comment %>:
            <%= f.text_field :description %><br />
          
            <%= f.label :rating %>:
            <%= f.select :rating, (1..5) %><br />
        
          <% end %>
          <%= product_reviews.submit%>

        <% end %>
        <% @product.reviews.each do |review| %>
          <dl>
            <dt>User</dt>
            <dd><strong><%= review.user.first_name %></strong></dd>
            <dt>Comment</dt>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
          </dl>
        <% end %>
      </dl>
    </div>

  </article>

</section>
